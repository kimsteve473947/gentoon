export interface FontWeight {
  weight: number;
  name: string;
  cssCode: string;
}

export interface NoonnnuFont {
  id: string;
  nameKo: string;
  nameEn: string;
  fontFamily: string;
  category: 'gothic' | 'serif' | 'handwriting' | 'decorative' | 'monospace';
  cssCode: string;
  provider: string;
  originalUrl?: string;
  description?: string;
  weights?: FontWeight[];
}

