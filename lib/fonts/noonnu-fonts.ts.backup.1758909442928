/**
 * 🎨 눈누(noonnu.cc) 사이트에서 수집한 저작권 문제없는 웹폰트들
 * - 임베딩 권한: "사용 가능"만 선별
 * - 상업적 이용 가능
 * - 웹사이트 및 프로그램 서버 내 폰트 탑재 허용
 * 
 * 자동 생성됨: 2025. 9. 27. 오전 2:56:54
 */

export interface FontWeight {
  weight: number;
  name: string;
  cssCode: string;
}

export interface NoonnnuFont {
  id: string;
  nameKo: string;
  nameEn: string;
  fontFamily: string;
  category: 'gothic' | 'serif' | 'handwriting' | 'decorative' | 'monospace';
  cssCode: string;
  provider: string;
  originalUrl?: string;
  description?: string;
  weights?: FontWeight[];
}

